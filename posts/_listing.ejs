```{=html}
<div id="mockup-clean-room" class="quarto-listing-container">
  <% for (const item of items) { %>
  <% const cleanPath = item.path.replace(/index\.html$/, '').replace(/index\.qmd$/, '').replace(/\/$/, '') + '/' %>
  <div class="mockup-card-wrapper" <%= metadataAttrs(item) %>>
    <div class="mockup-row">
      
      <div class="mockup-image-col">
        <img src="<%= item.image %>" alt="">
      </div>

      <div class="mockup-text-col">
        <div class="mockup-pills d-flex flex-wrap gap-2">
          <% for (const category of item.categories) { %>
            <span class="mockup-pill"><%= category %></span>
          <% } %>
        </div>

        <h2 class="mockup-title">
          <a href="<%= cleanPath %>"><%= item.title %></a>
        </h2>

        <p class="mockup-desc"><%= item.description %></p>

        <div class="mockup-meta d-flex flex-column flex-md-row gap-md-4 gap-2">
          <div><i class="bi bi-calendar3"></i> <p class="d-inline"><%= item.date %></p></div>
          <div><i class="bi bi-clock"></i> <p class="d-inline"><%= item['reading-time'] %></p></div>
        </div>
      </div>

    </div>
  </div>
  <% } %>
</div>
